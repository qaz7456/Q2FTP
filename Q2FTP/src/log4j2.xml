<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug" name="Q2D" packages="com">
	
	<Appenders>
	<Console name="STDOUT" target="SYSTEM_OUT">
<!--       <PatternLayout pattern="%d %p %c [%t] %m%n"/> -->
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %r [%t] %-5p %c:%L %x - %m%n" charset="UTF-8"/>
    </Console>
    <File name="q2ftpLog" append="true" fileName="/data/log/Q2FTP/Q2FTP.log">
      <PatternLayout>
        <Pattern>%d %p %c [%t] %m%n</Pattern>
        <charset>UTF-8</charset>
      </PatternLayout>
    </File>
  </Appenders>
  <Loggers>
    <Root level="debug">
      <AppenderRef ref="q2ftpLog"/>
      <AppenderRef ref="STDOUT"/>
    </Root>
  </Loggers>
</Configuration>